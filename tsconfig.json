{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@middleware/*":["middleware/*"],
      "@model/*":["model/*"],
      "@routes/*":["routes/*"],
      "@types/*":["types/*"],
      "@config/*": ["config/*"],
      "@services/*": ["services/*"],
      "@utils/*":["utils/*"],
      "@validations/*":["validations/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}